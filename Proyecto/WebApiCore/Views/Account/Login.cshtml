@model WebApiCore.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-signin {
    margin: 0 auto;
    max-width: 330px;
    padding: 15px;
}
</style>

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
           
        </div>
    </div>
    <!-- /.row -->
    <br />
    <br />  
    <br />
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2 class="form-signin-heading">Iniciar Sesión</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Ingrese su Cédula" })
            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        <br />
         @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Ingrese su contraseña " })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        <br />
        
         <br />

        <input type="submit" value="Ingresar" class="btn btn-lg btn-primary btn-block" />
    }
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    
</div>
<!-- /.container-fluid -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

